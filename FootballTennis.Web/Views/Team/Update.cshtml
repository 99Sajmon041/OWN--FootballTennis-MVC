@model TeamUpsertViewModel

<form asp-controller="Team" asp-action="Update" asp-route-id="@Model.Id" asp-route-tournamentId="@Model.TournamentId" method="post" data-player-select-form>
    @Html.AntiForgeryToken()

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">

            <input type="hidden" asp-for="TournamentId" />
            <input type="hidden" asp-for="TeamPlayersCount" />
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @for (int i = 0; i < Model.TeamPlayersCount; i++)
            {
                <div class="mb-3">
                    <label class="form-label">Hráč @(i + 1)</label>
                    <select name="SelectedPlayersId" class="form-select player-select" required>
                        <option value="">-- Vyber hráče --</option>

                        @foreach (var player in Model.Players)
                        {
                            <option value="@player.Id"
                                    data-assigned="@(player.IsAlreadyAssigned ? "1" : "0")"
                                    disabled="@(player.IsAlreadyAssigned ? "disabled" : null)"
                                    selected="@(Model.SelectedPlayersId[i] == player.Id ? "selected" : null)">
                                @player.FullName
                            </option>
                        }
                    </select>
                </div>
            }

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Tournament" asp-route-id="@Model.TournamentId">
                    Zpět
                </a>

                <button class="btn btn-primary" type="submit">
                    Upravit
                </button>

            </div>
        </div>
    </div>
</form> 