@model List<TournamentListItemViewModel>


<div class="text-center mb-5">
    <h1 class="display-4">Seznam turnajů</h1>
</div>

<div class="d-flex justify-content-end my-2">
    <a type="button" class="btn btn-primary" asp-controller="Tournaments" asp-action="Create">
        Přidat turnaj
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Název turnaje</th>
            <th>Místo konání</th>
            <th>Datum</th>
            <th>Status</th>
            <th>Počet teamů</th>
            <th>Počet zápasů</th>
            <th>Vítěz</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0 || Model is not null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Date.ToString("yyyy.MM.dd")</td>
                    <td>@EnumHelper.GetCzechStatusName(item.Status)</td>
                    <td>@item.TeamPlayersCount</td>
                    <td>@(item.TeamsCount == 0 ? "Zatím nejsou teamy" : item.TeamsCount)</td>
                    <td>@(item.MatchesCount == 0 ? "Zatím nejsou zápasy" : item.MatchesCount)</td>
                    <td>@(item.WinnerName is null ? "Zatím není" : item.WinnerName)</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info" asp-controller="Tournament" asp-action="Detail" asp-route-id="@item.Id">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">
                    <div class="alert alert-warning mb-0">
                        Zatím není žádný turnaj
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="d-flex justify-content-start mt-3">
    <a type="button" class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
        Domů
    </a>
</div>