<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nohejbal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FootballTennis.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm mb-3 position-relative">
            <div class="container-fluid">

                <a class="navbar-brand fw-semibold text-dark mb-0 text-decoration-none"
                   asp-controller="Home" asp-action="Index">
                    Nohejbalové turnaje
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <ul class="navbar-nav me-auto mt-3 mt-md-0 gap-2">
                        <li class="nav-item">
                            <a class="nav-link nav-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tournament" ? "active-pill" : "")"
                               asp-controller="Tournament"
                               asp-action="Index">
                                Turnaje
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Player" ? "active-pill" : "")"
                               asp-controller="Player"
                               asp-action="Index">
                                Hráči
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-pill @(
                               ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
                               && ViewContext.RouteData.Values["action"]?.ToString() == "Rules"
                                   ? "active-pill" : "")"
                               asp-controller="Home"
                               asp-action="Rules">
                                Pravidla
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-md-center gap-2 mt-3 mt-md-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="text-muted small d-none d-md-inline">
                                @(User.FindFirst("FullName")?.Value ?? User.Identity?.Name)
                            </span>

                            <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100 w-md-auto">
                                    Odhlásit
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm w-100 w-md-auto">
                                Přihlásit
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @if (TempData["Error"] is string error && !string.IsNullOrWhiteSpace(error))
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Success"] is string success && !string.IsNullOrWhiteSpace(success))
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @success
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Info"] is string info && !string.IsNullOrWhiteSpace(info))
            {
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                    @info
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Warning"] is string warning && !string.IsNullOrWhiteSpace(warning))
            {
                <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                    @warning
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.UtcNow.Year - Nohejbal, Vytvořil <strong>Šimon Durák</strong>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
