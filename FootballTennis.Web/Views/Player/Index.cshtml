@model PlayersIndexViewModel

@{
    ViewData["Title"] = "Hráči";
}

<div class="text-center mb-5">
    <h1 class="display-4">Seznam hráčů</h1>
</div>

<form method="get" class="mb-3" id="playersFilterForm">
    <input type="hidden" name="Page" value="1" />

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-3 align-items-end">

                <div class="col-12 col-md-5 col-lg-4">
                    <label class="form-label">Hledat</label>

                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               id="searchInput"
                               name="Search"
                               value="@Model.Result.Search"
                               placeholder="Jméno..." />

                        <button type="button"
                                class="btn btn-outline-primary"
                                id="clearSearchBtn"
                                title="Vymazat">
                            ✕
                        </button>
                    </div>
                </div>

                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label">Řazení</label>
                    <select name="SortBy" class="form-select" id="sortSelect">
                        <option value="">-- Vyberte --</option>
                        @foreach (var option in Model.SortOptions)
                        {
                            if (option.Value == Model.Result.SortBy)
                            {
                                <option value="@option.Value" selected>@option.Text</option>
                            }
                            else
                            {
                                <option value="@option.Value">@option.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label">Počet výsledků</label>
                    <select name="PageSize" class="form-select" id="pageSize">
                        @foreach (var option in OptionsBuilder.GetPageSizeOptions())
                        {
                            if (option.Value == Model.Result.PageSize.ToString())
                            {
                                <option value="@option.Value" selected>@option.Text</option>
                            }
                            else
                            {
                                <option value="@option.Value">@option.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3 col-lg-2">
                    <div class="form-check mt-4">
                        <input class="form-check-input"
                               type="checkbox"
                               name="Desc"
                               value="true"
                               id="descCheck"
                               @(Model.Result.Desc ? "checked" : "") />
                        <label class="form-check-label" for="descCheck">
                            Sestupně
                        </label>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@if(User.IsInRole(nameof(AdminRole.Admin)))
{
    <div class="d-flex justify-content-end my-2">
        <a type="button" class="btn btn-primary" asp-controller="Player" asp-action="Create">
            Přidat hráče
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].PlayerId)</th>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].FullName)</th>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].TournamentsCount)</th>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].FirstCount)</th>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].SecondCount)</th>
                <th>@Html.DisplayNameFor(m => m.Result.Items[0].ThirdCount)</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Result.Items is not null && Model.Result.Items.Count > 0)
            {
                @foreach (var item in Model.Result.Items)
                {
                    <tr>
                        <td>@item.PlayerId</td>
                        <td>@item.FullName</td>
                        <td>@item.TournamentsCount</td>
                        <td>@item.FirstCount</td>
                        <td>@item.SecondCount</td>
                        <td>@item.ThirdCount</td>
                        <td>
                            @if (User.IsInRole(nameof(AdminRole.Admin)))
                            {
                                @if (item.TournamentsCount == 0)
                                {
                                    <form asp-controller="Player"
                                          asp-action="Delete"
                                          asp-route-id="@item.PlayerId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Opravdu chcete hráče: @item.FullName smazat?');">

                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-danger mx-2">
                                            Smazat
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-danger mx-2" disabled>
                                        Smazat
                                    </button>
                                }

                                <a class="btn btn-sm btn-warning mx-2 my-1"
                                   asp-controller="Player"
                                   asp-action="Update"
                                   asp-route-id="@item.PlayerId">
                                   Upravit
                                </a>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Nemáte oprávnění</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div class="alert alert-warning mb-0">
                            Hráči nenalezeni
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.Result.TotalPages > 1)
    {
        <div class="d-flex justify-content-center">
            <nav>
                <ul class="pagination">

                    <li class="page-item @(Model.Result.HasPrevious ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Player"
                           asp-action="Index"
                           asp-route-Page="@(Model.Result.Page - 1)"
                           asp-route-PageSize="@Model.Result.PageSize"
                           asp-route-Search="@Model.Result.Search"
                           asp-route-SortBy="@Model.Result.SortBy"
                           asp-route-Desc="@Model.Result.Desc">
                            Předchozí
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.Result.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Result.Page == i ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Player"
                               asp-action="Index"
                               asp-route-Page="@i"
                               asp-route-PageSize="@Model.Result.PageSize"
                               asp-route-Search="@Model.Result.Search"
                               asp-route-SortBy="@Model.Result.SortBy"
                               asp-route-Desc="@Model.Result.Desc">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(Model.Result.HasNext ? "" : "disabled")">
                        <a class="page-link"
                           asp-controller="Player"
                           asp-action="Index"
                           asp-route-Page="@(Model.Result.Page + 1)"
                           asp-route-PageSize="@Model.Result.PageSize"
                           asp-route-Search="@Model.Result.Search"
                           asp-route-SortBy="@Model.Result.SortBy"
                           asp-route-Desc="@Model.Result.Desc">
                            Další
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }

</div>



<div class="d-flex justify-content-start mt-3">
    <a type="button" class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
        Domů
    </a>
</div>


